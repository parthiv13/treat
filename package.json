{
  "name": "treat",
  "version": "1.0.0",
  "private": false,
  "description": "Posts a gif on every PR as a reward for pushing code.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "all": "npm run build && npm run format && yarn run lint && yarn run pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruairidhwm/action-cats.git"
  },
  "keywords": [
    "actions",
    "cats",
    "github"
  ],
  "author": {
    "name": "Ruairidh Wynne-McHardy",
    "url": "https://ruairidh.dev"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.12",
    "@typescript-eslint/parser": "^2.8.0",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.21.0",
    "eslint-plugin-github": "^5.1.8",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "ts-jest": "^29.2.6",
    "typescript": "^3.6.4"
  }
}
